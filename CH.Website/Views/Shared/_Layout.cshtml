<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Thanks to http://realfavicongenerator.net/ -->
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="@Url.Content("~/mstile-144x144.png")">
    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/apple-touch-icon-57x57.png")">
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/apple-touch-icon-114x114.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/apple-touch-icon-72x72.png")">
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/apple-touch-icon-144x144.png")">
    <link rel="apple-touch-icon" sizes="60x60" href="@Url.Content("~/apple-touch-icon-60x60.png")">
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/apple-touch-icon-120x120.png")">
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/apple-touch-icon-76x76.png")">
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/apple-touch-icon-152x152.png")">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/apple-touch-icon-180x180.png")">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-192x192.png")" sizes="192x192">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-160x160.png")" sizes="160x160">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-96x96.png")" sizes="96x96">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-16x16.png")" sizes=" 16x16">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-32x32.png")" sizes="32x32">

    <title>@ViewBag.Title - Critter Heroes</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/cdnFallback")

    <script type="text/javascript">
        cdnFallback.options.siteRoot = '@Url.Content("~")';
        cdnFallback.modernizerFallback('modernizr');
    </script>

</head>
<body>

    @{Html.RenderHomeAction(x => x.Menu());}
    @{Html.RenderHomeAction(x => x.Header());}

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - The Other Tim Duncan - Critter Heroes</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        cdnFallback.jqueryFallback('jquery');
    </script>

    @Scripts.Render("~/bundles/jqueryvalidation")
    <script type="text/javascript">
        cdnFallback.jqueryValidationFallback('jqueryvalidation');
    </script>

    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">
        cdnFallback.jqueryUIFallback('jqueryui');
    </script>

    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script type="text/javascript">
        cdnFallback.unobtrusiveFallback('jqueryunobtrusive');
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        cdnFallback.bootstrapFallback('bootstrap');
    </script>


    @Scripts.Render("~/bundles/respond")
    <script type="text/javascript">
        cdnFallback.respondFallback('respond');
    </script>

    <script type="text/javascript">
        cdnFallback.cssBootStrapFallback("Content/bootstrap");

        $(function (cheroes) {
            cheroes.rootUrl = '@Url.Content("~")';
        }(this.cheroes = this.cheroes || {}));
    </script>

    @Scripts.Render("~/bundles/cheroes")

    @RenderSection("scripts", required: false)

</body>

























</html>
