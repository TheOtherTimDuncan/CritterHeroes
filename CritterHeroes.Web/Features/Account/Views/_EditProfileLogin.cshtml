@model CritterHeroes.Web.Features.Account.Models.EditProfileLoginModel

<div class="modal-container fade slide-down">

    <div class="modal-header">
        <button class="close pull-right" type="button" data-modal-close=""><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit Email - Login</h4>
    </div>

    <form id="email-login-form" action="@Url.AccountEditProfileLoginAction()" data-next="@Url.AccountEditProfileSecureAction()" autocomplete="off">

        @Html.AntiForgeryToken()

        <div class="modal-body">
            <p>As a security precaution, please enter your password.</p>
            <section>
                <div class="input-group">
                    <div class="input-group-icon"><span class="icon-lock"></span></div>
                    <input type="password" name="@Html.NameFor(x => x.Password)" autofocus="autofocus" @Html.ValidationAttributesFor(x => x.Password) />
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </section>
        </div>

        <div class="modal-footer">
            <input id="email-login" type="submit" class="btn btn-primary" value="Confirm" />
            <button id="close" type="button" data-modal-close="" class="btn btn-primary">Cancel</button>
        </div>

    </form>

</div>
