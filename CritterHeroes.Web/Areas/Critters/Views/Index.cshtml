@model CritterHeroes.Web.Areas.Critters.Models.CrittersListModel

@{
    ViewBag.Title = "Critters";
}

@section scripts{
    @Scripts.Render("~/bundles/critterslist")
}

<h2>Critters</h2>

<form action="@Url.CritterHomeAction()" method="get" class="filters-container">
    <section>Filters</section>
    <section>
        <label for="StatusID">Status</label>
        <select id="StatusID" name="StatusID">
            <option>Any status</option>
            @foreach (var item in Model.StatusItems)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </section>
</form>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>Name</th>
            <th>Sex</th>
            <th>Status</th>
            <th>Breed</th>
            <th>Foster</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Critters.IsNullOrEmpty())
        {
            foreach (var critter in Model.Critters)
            {
                <tr>
                    <td>
                        @if (!critter.PictureFilename.IsNullOrEmpty())
                        {
                            <img height="50" src="@Url.Picture(critter.ID, critter.PictureFilename, desiredHeight: 50)" />
                        }
                        else
                        {
                            <text>&nbsp;</text>
                        }
                    </td>
                    <td>@critter.Name</td>
                    <td>@critter.SexName</td>
                    <td>@critter.Status</td>
                    <td>@critter.Breed</td>
                    <td>@critter.FosterName</td>
                </tr>
            }
        }
    </tbody>
</table>

@Html.Paging(Model.Paging)
