@model CritterHeroes.Web.Areas.Critters.Models.CrittersListModel

@{
    ViewBag.Title = "Critters";
}

<h2>Critters</h2>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
            <th>Breed</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Critters.IsNullOrEmpty())
        {
            foreach (var critter in Model.Critters)
            {
                <tr>
                    <td>@critter.ID</td>
                    <td>@critter.Name</td>
                    <td>@critter.Status</td>
                    <td>@critter.Breed</td>
                </tr>
            }
        }
    </tbody>
</table>
