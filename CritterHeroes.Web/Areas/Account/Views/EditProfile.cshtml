@model CritterHeroes.Web.Areas.Account.Models.EditProfileModel

@{
    ViewBag.Title = "Edit Profile";
}

@section scripts{
    @Scripts.Render("~/bundles/chusername")
    @Scripts.Render("~/bundles/cheditprofile")
}

@using (Html.FluentHtml().Form().Begin())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ReturnUrl)

    <section class="form-group">
        @Html.ValidationSummary(true, null)
    </section>

    <section class="form-group">
        @Html.FluentHtml().Label().For(m => m.Email)
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            <span class="form-control" readonly="readonly" title="@Model.Email">@Model.Email</span>
            <span class="input-group-btn"><a href="@Url.AccountAction(x=> x.EditProfileLogin(Model.ReturnUrl))" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span><span class="hidden-xs">&nbsp;Change</span></a></span>
        </div>
    </section>

    <section class="form-group">
        @Html.FluentHtml().Label().For(m => m.FirstName)
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            @Html.FluentHtml().InputText().For(m => m.FirstName).Class("form-control").Placeholder("First name")
        </div>
        @Html.ValidationMessageFor(m => m.FirstName)
    </section>

    <section class="form-group">
        @Html.FluentHtml().Label().For(m => m.LastName)
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            @Html.FluentHtml().InputText().For(m => m.LastName).Class("form-control").Placeholder("Last name")
        </div>
        @Html.ValidationMessageFor(m => m.LastName)
    </section>

    <section class="form-group">
        <input type="submit" value="Save" />
    </section>
}
