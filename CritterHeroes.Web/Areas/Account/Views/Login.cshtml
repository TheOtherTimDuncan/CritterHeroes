@model CritterHeroes.Web.Areas.Account.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@section scripts{
    <script type="text/javascript" src="@Url.For("ch.busy-indicator.js")"></script>
    <script type="text/javascript" src="@Url.For("ch.login.js")"></script>
}

<div class="row">
    <div class="form-col-offset"></div>
    <div class="form-col">
        <form action="@Url.AccountLoginAction(Model.ReturnUrl)" method="post" autocomplete="off">

            @Html.AntiForgeryToken()

            <section>
                <div class="input-group">
                    <div class="input-group-icon"><span class="icon-email"></span></div>
                    <input type="email" name="@Html.NameFor(x => x.Email)" autofocus="autofocus" class="@Html.ModelStateClassFor(x => x.Email)" @Html.ValidationAttributesFor(x => x.Email) />
                </div>
                @Html.ValidationMessageFor(m => m.Email)
            </section>

            <section>
                <div class="input-group">
                    <div class="input-group-icon"><span class="icon-lock"></span></div>
                    <input type="password" name="@Html.NameFor(x => x.Password)" class="@Html.ModelStateClassFor(x => x.Password)" @Html.ValidationAttributesFor(x => x.Password) />
                    <button type="button" id="forgot-password" title="Forgot password?" class="btn btn-info" tabindex="-1" data-url="@Url.AccountForgotPasswordAction()">?</button>
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </section>

            <section>
                @Html.ValidationSummary(true, null)
            </section>

            <section class="flex-row">
                <input type="submit" value="Login" />
                <a href="@Url.AccountConfirmEmailAction()" class="flex-cell-s1 text-right" tabindex="-1">Have confirmation code?</a><br />
            </section>
        </form>
    </div>
</div>
