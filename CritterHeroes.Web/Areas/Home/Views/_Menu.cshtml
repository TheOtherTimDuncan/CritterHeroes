@model CritterHeroes.Web.Areas.Home.Models.MenuModel

<nav>
    <div>
        <header>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="@Model.LogoUrl" class="logo-small" />
            <a href="@Url.CritterHomeAction()" class="navbar-brand">@Model.OrganizationShortName</a>
        </header>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                @foreach (var controllerAction in Model.NavItems)
                {
                    <li><a href="@Url.ForControllerAction(controllerAction)">@controllerAction.Title</a></li>
                }
                @if (!Model.AdminNavItems.IsNullOrEmpty())
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @foreach (var controllerAction in Model.AdminNavItems)
                            {
                                <li><a href="@Url.ForControllerAction(controllerAction)">@controllerAction.Title</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Model.IsLoggedIn)
                {
                    <li><a href="@Url.AccountEditProfileAction()" class="hidden-xs">Welcome, @Model.UserDisplayName</a></li>
                    <li><a href="@Url.AccountEditProfileAction()" class="visible-xs">Edit Profile</a></li>
                    <li><a href="@Url.AccountLogoutAction()">Logout</a></li>
                }
                else
                {
                    <li><a href="@Url.AccountLoginAction()">Login</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
