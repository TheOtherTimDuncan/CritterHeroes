@model CritterHeroes.Web.Areas.Home.Models.MenuModel

<nav class="flex-row flex-center">
    <div>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <img src="@Model.LogoUrl" class="logo-small" />
        <a href="@Url.HomeAction()" class="navbar-brand">@Model.OrganizationShortName</a>
    </div>
    <div class="flex-row flex-cell-s1 navbar-collapse collapse">
        <div class="flex-row">
            <a href="@Url.HomeAction()">Home</a>
            @if (Model.ShowAdminMenu)
            {
                <div class="dropdown-container">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<span class="caret"></span></a>
                    <div class="dropdown-menu">
                        <a href="@Url.AdminContactsHomeAction()">Contacts</a>
                        <a href="@Url.OrganizationEditProfileAction()">Organization Profile</a>
                        <div class="divider" role="separator"></div>
                        <a href="@Url.AdminCrittersHomeAction()">Critters</a>
                        <a href="@Url.EmailHomeAction()">Emails</a>
                        <a href="@Url.ErrorLogHomeAction()">Error Log</a>
                        <a href="@Url.ListsHomeAction()">Lists Dashboard</a>
                    </div>
                </div>
            }
        </div>
        <div class="flex-row flex-cell-s1 flex-right">
            @if (Model.IsLoggedIn)
            {
                <a href="@Url.AccountEditProfileAction()" class="hidden-xs">Welcome, @Model.UserDisplayName</a>
                <a href="@Url.AccountEditProfileAction()" class="visible-xs">Edit Profile</a>
                <a href="@Url.AccountLogoutAction()">Logout</a>
            }
            else
            {
                <a href="@Url.AccountLoginAction()">Login</a>
            }
        </div>
    </div>
</nav>
