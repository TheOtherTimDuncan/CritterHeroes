@model CritterHeroes.Web.Areas.Common.Models.PagingModel

@if (Model.TotalPages > 1)
{
    <ul class="paging-container">

        <li class="page-prev"><a href="@Url.Page(Model.PreviousPage, Model.Query)" title="Go to page @Model.PreviousPage"></a></li>

        <li class="@(Model.CurrentPage == 1 ? "current" : "")"><a href="@Url.Page(1, Model.Query)" title="Go to page 1">1</a></li>

        @if (Model.ShowLeadingChunkBreak)
        {
            <li class="page-chunk-break"></li>
        }

        @for (var p = Model.FirstPage; p <= Model.LastPage; p++)
        {
            <li class="@(p == Model.CurrentPage ? "current" : "")"><a href="@Url.Page(p, Model.Query)" title="Go to page @p">@p</a></li>
        }

        @if (Model.ShowTrailingChunkBreak)
        {
            <li class="page-chunk-break"></li>
        }

        <li class="@(Model.CurrentPage == Model.TotalPages ? "current" : "")"><a href="@Url.Page(Model.TotalPages, Model.Query)" title="Go to page @Model.TotalPages">@Model.TotalPages</a></li>

        <li class="page-next"><a href="@Url.Page(Model.NextPage, Model.Query)" title="Go to page @Model.NextPage"></a></li>

    </ul>
}