<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Animal Rescues</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/cdnFallback")
    <script type="text/javascript">
        cdnFallback.options.siteRoot = '@Url.Content("~")';
        cdnFallback.modernizerFallback('modernizr');
    </script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Link().ActionLink("Index", "Home", areaName: AreaName.None).Text("FFLAH - Admin").Class("navbar-brand")
            </div>
            <div class="navbar-collapse collapse">
                @Html.BootstrapNav().AsNavBar().AddElement(() =>
                {
                    return Html.BootstrapNavItem().SetActiveByControllerAndAction().AddElement(() =>
                    {
                        return Html.Link().ActionLink("Index", "Home", areaName: AreaName.None).Text("Home");
                    });
                }).AddElement(() =>
                {
                    return Html.BootstrapNavItem().SetActiveByControllerAndAction().AsDropdown("Maintenance").AddElement(() =>
                    {
                        return Html.BootstrapNav().AsDropdown().AddElement(() =>
                        {
                            return Html.BootstrapNavItem().SetActiveByControllerAndAction().AddElement(() =>
                            {
                                return Html.Link().ActionLink("Dashboard", "DataMaintenance", areaName: AreaName.Admin).Text("Dashboard");
                            });
                        });
                    });
                })
                <img src="~/Content/Images/Logo46x45.png" title="Logo" class="pull-right logo-46-45" />
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Other Tim Duncan - Animal Rescues</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        cdnFallback.jqueryFallback('jquery');
    </script>

    @Scripts.Render("~/bundles/jqueryvalidation")
    <script type="text/javascript">
        cdnFallback.jqueryValidationFallback('jqueryvalidation');
    </script>

    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script type="text/javascript">
        cdnFallback.unobtrusiveFallback('jqueryunobtrusive');
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        cdnFallback.bootstrapFallback('bootstrap');
    </script>


    @Scripts.Render("~/bundles/respond")
    <script type="text/javascript">
        cdnFallback.respondFallback('respond');
    </script>

    <script type="text/javascript">
        cdnFallback.cssBootStrapFallback("Content/bootstrap");

        $(function (arescues) {
            arescues.rootUrl = '@Url.Content("~")';
        }(this.arescues = this.arescues || {}));
    </script>

    @RenderSection("scripts", required: false)

</body>

</html>
