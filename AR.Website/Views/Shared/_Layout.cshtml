<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Animal Rescues</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/cdnFallback")
    <script type="text/javascript">
        cdnFallback.options.siteRoot = '@Url.Content("~")';
        cdnFallback.modernizerFallback('modernizr');
    </script>


</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="@Url.Content("~/Content/Images/Logo36x35.png")" class="logo-small pull-left" />
                @Html.Link().ActionLink("Index", "Home", areaName: AreaName.None).Text("FFLAH").Class("navbar-brand")
            </div>
            <div class="navbar-collapse collapse navbar-right">
                @{
                    var nav = Html.BootstrapNav()
                        .AsNavBar()
                        .AddElement(
                            Html.BootstrapNavItem().AddElement(
                                Html.Link().ActionLink("Index", "Home", areaName: AreaName.None).Text("Home")
                            )
                        )
                        .AddElement(
                            Html.BootstrapNavItem().AddElement(
                                Html.Link().ActionLink("Index", "ErrorLog", areaName: AreaName.Admin).Text("Error Log")
                            )
                        );

                    var dropdownMaintenance = Html.BootstrapNavItem()
                        .AsDropdown("Maintenance")
                        .AddElement(
                            Html.BootstrapNav()
                                .AsDropdown()
                                .AddElement(
                                    Html.BootstrapNavItem().AddElement(
                                        Html.Link().ActionLink("Dashboard", "DataMaintenance", areaName: AreaName.Admin).Text("Dashboard")
                                    )
                                )
                            );
                    nav.AddElement(dropdownMaintenance);
                }
                @nav
            </div>
        </div>
    </div>

    <div class="page-banner">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-4">
                    <img src="@Url.Content("~/Content/Images/Logo140x136.png")" class="logo-medium" />
                </div>
                <div class="col-md-7 col-sm-4">
                    <blockquote>
                        <p>I believe in animal rights, and high among them is the right to the gentle stroke of a human hand.</p>
                        <footer>-<cite>Robert Brault</cite></footer>
                    </blockquote>
                </div>
                <div class="col-md-3 col-sm-4">
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Other Tim Duncan - Animal Rescues</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        cdnFallback.jqueryFallback('jquery');
    </script>

    @Scripts.Render("~/bundles/jqueryvalidation")
    <script type="text/javascript">
        cdnFallback.jqueryValidationFallback('jqueryvalidation');
    </script>

    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script type="text/javascript">
        cdnFallback.unobtrusiveFallback('jqueryunobtrusive');
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        cdnFallback.bootstrapFallback('bootstrap');
    </script>


    @Scripts.Render("~/bundles/respond")
    <script type="text/javascript">
        cdnFallback.respondFallback('respond');
    </script>

    <script type="text/javascript">
        cdnFallback.cssBootStrapFallback("Content/bootstrap");

        $(function (arescues) {
            arescues.rootUrl = '@Url.Content("~")';
        }(this.arescues = this.arescues || {}));
    </script>

    @Scripts.Render("~/bundles/arescues")

    @RenderSection("scripts", required: false)

</body>

























</html>
